{
  "name": "simple-orm",
  "version": "1.0.0",
  "scripts": {
    "res:build": "rescript",
    "res:clean": "rescript clean",
    "res:dev": "rescript -w",
    "dev:bun": "bun --watch run src/app.res.js",
    "start": "bun src/app.res.js",
    "test": "bun test tests/*.test.*",
    "dev:test": "bun run test --watch",
    "dev": "bun run build:rescript && bun run format && concurrently 'bun:dev:*'",
    "dev:app": "bun run --watch src/app.res.js",
    "apply": "bun run ./src/core/ApplyMigration.res.js"
  },
  "keywords": [
    "rescript",
    "bun"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@graphile/logger": "^0.2.0",
    "@rescript/core": "^1.6.0",
    "concurrently": "^9.0.1",
    "pg": "^8.12.0",
    "rescript": "^11.1.4",
    "rescript-bun": "^0.5.0",
    "spacetime": "^7.6.1",
    "tsd": "^0.31.2",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@glennsl/rescript-jest": "^0.11.0",
    "nodemon": "^3.1.4"
  }
}